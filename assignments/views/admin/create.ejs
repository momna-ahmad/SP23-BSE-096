<form action=""  method="post" enctype="multipart/form-data">
    <div class="row">
        <label for="title" class="col-3">Product name: </label>
        <input name="title" type="title" class="col-3" >
    </div>
    <div class="row">
        <label for="description" class="col-3"> Product description: </label> 
        <input name="description" type="description" class="col-3">
    </div>
    
    <div class="row">
        <label for="price" class="col-3"> Price: </label> 
        <input name="price" type="price" class="col-3">
    </div>



    <div class="row">
        <label for="titleInput">upload product Picture</label>
        <input name="file" type="file" class="form-control" id="titleInput" aria-describedby="emailHelp" placeholder="Enter Title" value="IPhone" />
        
      </div>

      <div class="mb-3">
        <label for="category" class="form-label">Category</label>
        <select class="form-select" id="category" name="category">
          <% for( let i=0 ; i < categories.length ; i++) { %>
            <option value="<%=categories[i]._id %>"> <%=categories[i].title %> </option>
          <% } %>
        </select>
      </div>


    <div class="row">
        <button class="col-2 btn btn-info" >
            Add product
        </button>
    </div>

    
    
    </form>
    
    <%-contentFor("styles") %>
    <style>
        div{
            margin-top : 10px !important; 
            justify-content: center;
        }
        
    </style>
